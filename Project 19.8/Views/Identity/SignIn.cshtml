@model Project_19.Models.SignInForm

@{
    ViewData["Icss"] = "bi bi-person-fill-lock";
	ViewData["Title"] = "Account";
}

<div class="row">

	<div class="col-md-4">

		<form asp-action="SignIn" asp-antiforgery="true">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="ReturnUrl">

			<div class="form-group">
				<label asp-for="Login" class="control-label"></label>
				<input asp-for="Login" class="form-control"/>
				<span asp-validation-for="Login" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control"/>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group" style="margin-top: 10px">
				<input type="submit" value="Go!" class="btn btn-primary"/>
				<input type="button" value="Create.." class="btn btn-secondary"
				       onclick="location.href='@Url.Action("Create", new 
				                               { returnUrl = Model.ReturnUrl })'"/>
			</div>
		</form>
	</div>
</div>
