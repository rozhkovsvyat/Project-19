@model Project_19.Models.CreateRoleForm

@{
    ViewData["Icss"] = "bi bi-star";
    ViewData["Title"] = "Add role";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <div class="form-group">
		        <label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
		        <span asp-validation-for="Name" class="text-danger"></span>
	        </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" class="btn btn-warning"/>
                <input type="button" value="Back to roles" class="btn btn-secondary"
                       onclick="location.href='@Url.Action("Index")'"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
